<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Toolbar -->
    <style name="ctrToolbar">
        <item name="android:background">@color/colorOnBackground</item>
    </style>

    <style name="tvToolbarLabel">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">@dimen/spacingM</item>
        <item name="android:paddingStart">@dimen/spacingM</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- Item -->
    <style name="pbProgressItem">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/spacingL</item>
    </style>

    <style name="tvErrorItem">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacingL</item>
        <item name="android:text">@string/tvErrorItem</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

</resources>
