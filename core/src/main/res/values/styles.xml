<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar -->
    <style name="tvToolbarLabel">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">@dimen/spacingM</item>
        <item name="android:paddingStart">@dimen/spacingM</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSizeXL</item>
    </style>

    <!-- Item -->
    <style name="pbProgressItem">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/spacingL</item>
    </style>

    <style name="tvErrorItem">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacingL</item>
        <item name="android:text">@string/tvErrorItem</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSizeXL</item>
    </style>

</resources>
