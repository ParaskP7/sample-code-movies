<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ivBackdrop">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="tvTitle">
        <item name="android:padding">@dimen/spacingM</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSizeXXL</item>
    </style>

    <style name="tvReleaseDate">
        <item name="android:paddingBottom">@dimen/spacingXXS</item>
        <item name="android:paddingLeft">@dimen/spacingM</item>
        <item name="android:paddingRight">@dimen/spacingM</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSizeL</item>
    </style>

    <style name="tvVote">
        <item name="android:paddingLeft">@dimen/spacingM</item>
        <item name="android:paddingRight">@dimen/spacingM</item>
        <item name="android:paddingTop">@dimen/spacingXXS</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSizeL</item>
    </style>

    <style name="tvOverview">
        <item name="android:padding">@dimen/spacingM</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/textSizeM</item>
    </style>

</resources>
