<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="ActivityMovieBackdropImageView">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ActivityMovieTitleTextView">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActivityMovieDetailsTextView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActivityMovieDetailsTextView.Top">
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ActivityMovieDetailsTextView.Bottom">
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="ActivityMovieOverviewTextView">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
