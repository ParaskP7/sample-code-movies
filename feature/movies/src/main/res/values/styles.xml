<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="RecyclerView">
        <item name="android:layout_marginTop">@dimen/cdItemVerticalMargin</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Toolbar -->
    <style name="ivToolbarFilterIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">@dimen/spacingS</item>
        <item name="android:paddingStart">@dimen/spacingS</item>
        <item name="android:src">@drawable/ic_filter</item>
    </style>

    <style name="ivToolbarCloseIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">@dimen/spacingS</item>
        <item name="android:paddingStart">@dimen/spacingS</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="tvToolbarFilterYear">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">@dimen/spacingM</item>
        <item name="android:paddingStart">@dimen/spacingM</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="tvToolbarFilterMonth">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">@dimen/spacingS</item>
        <item name="android:paddingStart">@dimen/spacingS</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- Item -->
    <style name="ivItemBackdrop">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="tvItemTitle">
        <item name="android:background">@drawable/shape_gradient</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:padding">@dimen/spacingM</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="ctrItemDetails">
        <item name="android:background">@color/colorContainer</item>
        <item name="android:paddingBottom">@dimen/spacingS</item>
        <item name="android:paddingLeft">@dimen/spacingM</item>
        <item name="android:paddingRight">@dimen/spacingM</item>
        <item name="android:paddingTop">@dimen/spacingS</item>
    </style>

    <style name="tvItemReleaseDate">
        <item name="android:gravity">start|center</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="tvItemVote">
        <item name="android:gravity">end|center</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

</resources>
