<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Toolbar -->
    <style name="ToolbarMoviesIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="ToolbarMoviesIcon.Filter">
        <item name="android:src">@drawable/ic_filter</item>
    </style>

    <style name="ToolbarMoviesIcon.Close">
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="ToolbarMoviesFilterDate">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarMoviesFilterDate.Year">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="ToolbarMoviesFilterDate.Month">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <!-- Item -->
    <style name="ItemMovieBackdropImageView">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ItemMovieTitleTextView">
        <item name="android:background">@drawable/shape_gradient</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ItemMovieLinearLayout">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="ItemMovieDetailsTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemMovieDetailsTextView.Left">
        <item name="android:gravity">start|center</item>
    </style>

    <style name="ItemMovieDetailsTextView.Right">
        <item name="android:gravity">end|center</item>
    </style>

</resources>
